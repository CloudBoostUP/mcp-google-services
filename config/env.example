# Google Services MCP Server Environment Configuration

# Google API Configuration
GOOGLE_APPLICATION_CREDENTIALS=config/credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/mcp-server.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Default Schedule (cron format)
DEFAULT_SCHEDULE=0 2 * * *
SCHEDULE_TIMEZONE=UTC

# Backup Configuration
BACKUP_BASE_PATH=backups
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security
ENCRYPTION_KEY=
ALLOWED_ORIGINS=*

# Development Settings
DEVELOPMENT_MODE=false
MOCK_APIS=false
TEST_MODE=false

# Service-Specific Settings
GMAIL_MAX_MESSAGES_PER_BATCH=100
DRIVE_MAX_FILE_SIZE_MB=100
CALENDAR_DATE_RANGE_DAYS=365
SHEETS_EXPORT_FORMATS=csv,xlsx,json
DOCS_EXPORT_FORMATS=pdf,docx,txt
PHOTOS_MAX_SIZE_MB=50
CONTACTS_EXPORT_FORMATS=vcf,csv,json
